<div class="card">
    <div class="card-header bg-dark">
        <h3 class="card-title text-white"><i class="far fa-image"></i> Upload Image</h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" id="inputGroup" class="custom-file-input" aria-describedby="inputGroupFileAddon" required>
                        <label for="inputGroup" class="custom-file-label">Choose File</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" id="title" class="form-control" placeholder="Title for Image" require>
            </div>
            <div class="form-group">
                <textarea name="description" id="description" rows="2" class="form-control" placeholder="Description to Image" required></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="fa fa-upload"></i> Upload Image</button>
            </div>
        </form>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3><i class="far fa-image"></i> Recent Uploads</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images }}
                <div class="col-md-4">
                    <a href="/images/{{uniqueId}}"><img src="/public/upload/{{ filename }}" alt="" class="w-100 h-100 img-thumbnail"></a>
                </div>
            {{/each}}
        </div>
    </div>
</div>
